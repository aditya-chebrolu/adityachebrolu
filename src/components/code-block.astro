---
interface Props {
  description: string | string[];
  codeHtml?: string;
}

const { description, codeHtml } = Astro.props;
---

<style>
  .box {
    border: solid 1.5px #343841;
  }

  .box > .description {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 8px;
    font-size: 14px;
    color: #c0c0c0;
    background-color: #17181c;
    border-bottom: solid 1.5px #343841;
  }

  .box > .code {
    font-size: 14px;
    color: #dbdbdb;
    padding: 6px 8px;
    overflow-x: auto;
    line-height: 22px;
    background-color: #0d0d0f;

    figure,
    pre {
      margin: 0;
    }
  }
</style>
<div class="box">
  <div class="description" set:html={description} />
  {codeHtml && <div class="code" set:html={codeHtml} />}
</div>
